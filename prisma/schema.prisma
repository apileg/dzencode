generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model UserEntity {
  id Int @id @default(autoincrement())

  email String @unique
  passwordHash String

  avatarUrl String

  orders OrderEntity[]
}

model OrderEntity {
  id    Int    @id @default(autoincrement())
  title String
  createdAt Int @db.Int

  products ProductEntity[]

  userId Int
  user UserEntity @relation(fields: [userId], references: [id])
}

model ProductEntity {
  id Int @id @default(autoincrement())
  title String
  serialNumber String

  availability ProductAvailabilityEnum
  usedOrNew UsedOrNewEnum

  imageUrl String
  type String

  guaranteeEnd   Int @db.Int

  priceUsd Int @db.UnsignedInt
  priceUah Int @db.UnsignedInt

  groupName String
  customerFullName String

  orderId Int
  order OrderEntity @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

enum ProductAvailabilityEnum {
  Available
  InMaintenance
}

enum UsedOrNewEnum {
  Used
  New
}
