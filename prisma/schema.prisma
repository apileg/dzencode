generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Order {
  id          Int       @id @default(autoincrement())
  title       String
  dateTime    Int       @db.Int
  description String
  products    Product[]
}

model Product {
  id             Int     @id @default(autoincrement())

  serialNumber   String
  isNew          Boolean
  photo          String
  title          String
  type           String
  specification  String
  guaranteeStart Int     @db.Int
  guaranteeEnd   Int     @db.Int

  price          Price[]

  order          Order   @relation(fields: [orderId], references: [id])
  orderId        Int

  dateTime       Int     @db.Int
}

model Price {
  id        Int     @id @default(autoincrement())

  value     Int
  symbol    String
  isDefault Boolean

  product   Product @relation(fields: [productId], references: [id])
  productId Int
}
